@model IEnumerable<Fate.Backoffice.Models.VideoType>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Begin Page Content -->
<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">編輯結果</h1>
        <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm" data-toggle="modal" data-target="#myModal" id="createBtn"><i class="fas fa-download fa-sm text-white-50"></i> 新增</a>
    </div>

    <div class="row">
        <div class="table-responsive col-12">
            <table class="table table-bordered">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.VideoType1)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Enable)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.VideoType1)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Enable)
                            <input type="checkbox" />
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.VideoTypeId }) |
                            @Html.ActionLink("Details", "Details", new { id = item.VideoTypeId }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.VideoTypeId })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>



