@model Fate.Backoffice.Models.PopularFate

@{
    Layout = null;
}

@using (Html.BeginForm("Edit", "Popular", FormMethod.Post, new { enctype = "multipart/form-data", id = "CreateForm" }))
{
    @Html.HiddenFor(model => model.PopularId)
    <div class="form-group">
        <label for="exampleInputPassword1">名稱</label>
        @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">連結</label>
        @Html.TextBoxFor(model => model.Url, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">排序</label>
        @Html.TextBoxFor(model => model.Sort, new { @class = "form-control" })
        <small>( 數字越大排越前面 )</small>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">圖片</label><br />
        <input type="file" name="Photo" /><br />
        <small>僅支援 JPG 與 PNG</small>
    </div>
    <button type="submit" class="btn btn-primary" id="CreateBtn">更新</button>
}
